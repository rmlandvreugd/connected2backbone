{
	"require": {
		"laravel/framework": "4.0.*@dev"
	},
    "require-dev": {
        "phpunit/phpunit": "3.7.*",
        "phpunit/phpunit-story": "*",
        "phpunit/php-code-coverage": "1.2.*@dev",
        "squizlabs/php_codesniffer": "1.*",
        "phpmd/phpmd": "1.4.*"
    },
	"autoload": {
		"classmap": [
			"app/commands",
			"app/controllers",
			"app/models",
			"app/database/migrations",
			"app/tests/TestCase.php"
		]
	},
	"minimum-stability": "dev",
	"config": {
        "bin-dir": "bin/"
    }
}